{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.local/schemas/object_summary.schema.json",
    "title": "TrackedObjectSummary",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "name",
        "category",
        "status",
        "last_seen_ts",
        "latest"
    ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "category": {
            "type": "string",
            "enum": [
                "UAV",
                "VEHICLE",
                "BEACON",
                "UNKNOWN"
            ]
        },
        "status": {
            "type": "string",
            "enum": [
                "ACTIVE",
                "STALE",
                "LOST"
            ]
        },
        "last_seen_ts": {
            "type": "string",
            "format": "date-time"
        },
        "latest": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "position",
                "confidence",
                "telemetry"
            ],
            "properties": {
                "position": {
                    "$ref": "telemetry_point.schema.json#/$defs/position"
                },
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "telemetry": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "speed_mps",
                        "heading_deg"
                    ],
                    "properties": {
                        "speed_mps": {
                            "type": "number",
                            "minimum": 0
                        },
                        "heading_deg": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 360
                        },
                        "rssi_dbm": {
                            "type": "number"
                        },
                        "battery_pct": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 100
                        }
                    }
                }
            }
        }
    }
}