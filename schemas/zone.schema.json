{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.local/schemas/zone.schema.json",
    "title": "Zone",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id",
        "name",
        "type",
        "geometry"
    ],
    "properties": {
        "id": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "type": {
            "type": "string",
            "enum": [
                "POLYGON",
                "BBOX"
            ]
        },
        "geometry": {
            "type": "object",
            "description": "GeoJSON Feature (Polygon) or Feature (Polygon representing bbox)",
            "additionalProperties": true
        },
        "created_by": {
            "type": "string"
        },
        "created_ts": {
            "type": "string",
            "format": "date-time"
        }
    }
}